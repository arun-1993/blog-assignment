{% extends 'base.html.twig' %}

{% block body %}

	{% for message in app.flashes('order') %}
	<div class="alert alert-success">
		<h3>{{ message }}</h3>
	</div>
	{% endfor %}

    <section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Dishes</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="filter " data-filter="all">All Dishes</li>
					<li class="filter" data-filter=".Drinks">Drinks</li>
					<li class="filter" data-filter=".Appetizers">Appetizers</li>
					<li class="filter" data-filter=".MainDish">Main Dish</li>
					<li class="filter" data-filter=".Desserts">Desserts</li>
				</ul>
			</div>
			<div class="clearfix"></div>
			<div class="row playlist-area" id="Container">

            {% for dish in dishes %}
				<div class="mix col-lg-3 col-md-4 col-sm-6 {{ dish.category|replace({' ':''}) }}">
					<div class="playlist-item h-100" style="max-width: 100%; height: auto;">
						<a href="{{ path('dish_single', {id : dish.id }) }}">
							<h4>{{ dish.name }}</h4>
							<br />
							<img class="h-50 border" src="{{ asset('images/' ~ dish.image) }}" alt="{{ dish.name }}" >
						</a>
                        <p>
							{# Item {{ dish.id }} #}
							<a class="btn btn-outline-danger btn-sm" href="{{ path('dish_single',{id: dish.id}) }}" role="button">Read More</a>
						</p>
						<br />
					</div>
				</div>
            {% endfor %}

			</div>
		</div>
	</section>

{% endblock %}

{% block javascripts %}
	<script>
		var category = '.{{ category }}';
		
		var containerEl = document.getElementById('Container');

		{% if category != 'all' %}	
		var mixer = mixitup(containerEl, {
			load: {
				filter: category
			}
		});
		{% endif %}
	</script>
{% endblock %}