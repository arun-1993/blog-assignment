{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h3>{{ message }}</h3>
    </div>
    {% endfor %}

    <div class="container">
        <h2>Edit Dishes</h2>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created On</th>
                    <th>Updated On</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>{{ dish.name }}</td>
                    <td>{{ dish.description }}</td>
                    <td>{{ dish.createdOn|date("d-m-Y h:ma") }}</td>
                    <td>{{ dish.updatedOn|date("d-m-Y h:ma") }}</td>
                    <td class="text-center"><a href="{{ path('dish_view', {id: dish.id}) }}"><i class="fa fa-eye"></i></a></td>
                    <td class="text-center"><a href="{{ path('dish_delete', {id: dish.id}) }}"><i class="fa fa-trash"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
