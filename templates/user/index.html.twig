{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Yay!</strong> {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Oops!</strong> {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}

    <div class="container">
        <h2>Your Dishes</h2>
        <br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created On</th>
                    <th>Updated On</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% if dishes|length == 0 %}
                <tr><td colspan="7"><h5 class="text-center">You have no posts yet!</h5></td></tr>
            {% else %}
                {% for dish in dishes %}
                <tr>
                    <td>{{ dish.name }}</td>
                    <td>{{ dish.description }}</td>
                    <td>{{ dish.createdOn|date("d-m-Y h:i a") }}</td>
                    <td>{{ dish.updatedOn|date("d-m-Y h:i a") }}</td>
                    <td class="text-center" title="View Dish"><a href="{{ path('dish_single', {id: dish.id}) }}"><i class="fa fa-eye"></i></a></td>
                    <td class="text-center" title="Edit Dish"><a href="{{ path('dish_edit', {id: dish.id}) }}"><i class="fa fa-edit"></i></a></td>
                    <td class="text-center" title="Delete Dish"><a href="{{ path('dish_delete', {id: dish.id}) }}"><i class="fa fa-trash"></i></a></td>
                </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
